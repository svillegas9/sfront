{
  "name": "react-boilerplate",
  "version": "0.1.0",
  "description": "FrontBand. React boilerplate",
  "repository": "https://github.com/FrontBand/react-boilerplate.git",
  "scripts": {
    "postinstall": "[ $PREBUILD ] && npm run build || exit 0",
    "predev": "npm run webpack",
    "dev": "concurrently --kill-others \"node static/server.js\" \"node webpack.server.js\"",
    "stats": "NODE_ENV=production webpack-dashboard -- node webpack.server.js",
    "start": "NODE_ENV=production node --inspect static/server.js",
    "webpack": "webpack",
    "build": "NODE_ENV=production npm run webpack",
    "preproduction": "npm run build",
    "production": "NODE_ENV=production node --inspect static/server.js",
    "hooks:commit": "lint-staged",
    "stylelint": "stylelint 'app/**/*.scss' 'app/**/*.css' 'assets/**/*.scss' 'assets/**/*.css'",
    "lint": "eslint app tests && npm run stylelint",
    "locales:extract": "i18next-extract-gettext --files='./+(app)/**/*.+(js|json)' --output=app/common/locales/source.pot",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "jest",
    "test:acceptance": "cypress run --browser chrome"
  },
  "lint-staged": {
    "*.js": "eslint app",
    "*.@(scss|css)": "stylelint"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run hooks:commit"
    }
  },
  "browserslist": [
    "defaults",
    "> 1%",
    "iOS >= 7",
    "Safari >= 7",
    "Safari 8"
  ],
  "engines": {
    "node": ">=7.5.0"
  },
  "author": "Front.Band <hello@front.band> (https://front.band/)",
  "license": "MIT",
